{
  "AllowedHosts": "*",

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "ReverseProxy": {
    "Clusters": {
      "apiCluster": {
        "Destinations": {
          "destination1": {
            "Address": "dapr:/v1.0/invoke/fbapp/method/"
          }
        }
      },
      "authCluster": {
        "Destinations": {
          "destination1": {
            "Address": ""
          }
        }
      }
    },
    "Routes": {
      "apiRoute": {
        "AuthorizationPolicy": "default",
        "ClusterId": "apiCluster",
        "Match": {
          "Path": "/api/{**catch-all}"
        }
      },
      "authRoute": {
        "AuthorizationPolicy": "anonymous",
        "ClusterId": "authCluster",
        "Match": {
          "Path": "/connect/{**catch-all}"
        }
      },
      "openIdConfigurationRoute": {
        "AuthorizationPolicy": "anonymous",
        "ClusterId": "authCluster",
        "Match": {
          "Path": "/.well-known/{**catch-all}"
        }
      }
    }
  }
}
